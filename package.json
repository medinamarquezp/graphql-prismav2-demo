{
  "name": "graphql-prismav2-demo",
  "version": "1.0.0",
  "description": "Esta demo tiene como único objetivo probar graphql-yoga y prisma-v2 para la realización de una simple API GraphQL",
  "main": "index.ts",
  "scripts": {
    "clean": "rm -r ./build",
    "build": "npm run lint && tsc",
    "generate:db": "cd ./src/store/db && touch %npm_config_dbname%.db",
    "prisma:generate": "env-cmd -f ./src/config/%npm_config_env%.env npx prisma generate --schema ./src/store/schema.prisma",
    "prisma:migrate:save": "env-cmd -f ./src/config/%npm_config_env%.env npx prisma migrate save --name %npm_config_name% --experimental",
    "postprisma:migrate:save": "env-cmd -f ./src/config/%npm_config_env%.env npx prisma migrate up --experimental",
    "dev": "env-cmd -f ./src/config/dev.env nodemon",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --quiet --fix",
    "test": "env-cmd -f ./src/config/test.env jest --detectOpenHandles --forceExit",
    "test:watch": "env-cmd -f ./src/config/test.env jest --watch"
  },
  "keywords": [
    "graphql-yoga",
    "prisma-v2"
  ],
  "author": "Pedro Medina",
  "license": "ISC",
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.5",
    "@types/faker": "^4.1.12",
    "@types/jest": "^25.2.2",
    "@types/node": "^14.0.1",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.0",
    "eslint-plugin-prettier": "^3.1.3",
    "faker": "^4.1.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "@prisma/client": "^2.0.0-beta.4",
    "apollo-boost": "^0.4.8",
    "bcrypt": "^4.0.1",
    "cross-fetch": "^3.0.4",
    "gql": "^1.1.2",
    "graphql-yoga": "^1.18.3",
    "jest": "^26.0.1",
    "jsonwebtoken": "^8.5.1"
  }
}
